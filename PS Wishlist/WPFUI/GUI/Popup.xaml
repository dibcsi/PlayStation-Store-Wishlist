<Window x:Class="WPFUI.Popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUI"
        mc:Ignorable="d"
        Title="Message" Height="250" Width="500">
    <DockPanel Margin="10">

        <TextBlock x:Name="txtHeader" HorizontalAlignment="Center" DockPanel.Dock="Top"/>

        <Expander x:Name="expanderError" Header="Error" DockPanel.Dock="Bottom" Margin="0,10,0,0">
            <ScrollViewer>
                <TextBlock x:Name="TxtMessage"  TextWrapping="Wrap"/>
            </ScrollViewer>
        </Expander>
    </DockPanel>
</Window>
